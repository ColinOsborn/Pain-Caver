          <tr>
            <td><i class="medium material-icons">trending_flat</i><br>Speed</td>
            <td><%= @service.average_pace(@activity) %><br>
              pace</td>   
            <td><%= @service.average_speed(@activity) %> mph<br>
              average</td> 
            <td><%= @service.max_speed(@activity) %> mph<br>
              max</td> 
            <td><br>
              not rated<td>
          </tr>
      </tbody>
    </table>
  </div>
</div>