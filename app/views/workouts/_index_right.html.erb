<div class="col s2 center" id="anton-recent">
  <% cache "anton-index-stats" do %> 
    <br><br>
    <%= image_tag(@presenter.stat_leader.user.profile_picture, class: "circle profile-pic") %>
    <br>
    <%= @presenter.stat_leader.user.name %>
    <div class="card background-color">
      <div class="card-content">
        <span class="card-title">Monthly Stats</span>
        <hr>
        <p><i class="tiny material-icons">trending_flat</i><%= number_with_delimiter(@presenter.stat_leader.recent_mileage) %> miles</p>
        <p><i class="tiny material-icons">query_builder</i><%= number_with_delimiter(@presenter.stat_leader.recent_sessions) %> sessions</p>
        <p><i class="tiny material-icons">query_builder</i><%= number_with_delimiter(@presenter.stat_leader.recent_duration) %></p>
        <p><i class="tiny material-icons">navigation</i><%= number_with_delimiter(@presenter.stat_leader.recent_elevation) %></p>
      </div>
    </div>
  <% end %> 

  <div class="card background-color">
    <div class="card-content">
      <span class="card-title">Running Tip</span>
      <hr>
      <p><%= @presenter.running_tip.tip %></p>
    </div>
  </div>

</div>